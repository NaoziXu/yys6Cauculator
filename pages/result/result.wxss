/**index.wxss**/
page{
  height:100%;
  overflow: hidden;
  font-size: 18px;
  font-family: "Microsoft YaHei" ;
  color: white;
}

.container {
  padding:130rpx 0;
  justify-content:flex-start;
}

.bg-image {
  top: 0;
  margin-left: 0;
  width: 100%;
  float: left;
  position: absolute;
  z-index: -1;
}

.top {
  height:35px;
  width: 300px;
  line-height: 35px;
  text-align: center;
}

.center {
  margin-top: 30px;
  height: 215px;
  width: 300px;
}

.row {
  height: 50px;
  width: inherit;
  line-height: 50px;
  text-align: center;
}

.row-left {
  float: left;
  height: inherit;
  width: 100px;
  text-align: center;
}

.row-right {
  margin-top: -3px;
  float: left;
  height: 40px;
  width: 180px;
  color: white;
  opacity: 1;
  border-bottom: 2px solid white;
}

.bottom {
  margin-top: 10px;
  height: 50px;
  line-height: 50px;
  width: 260px;
}

.doc-btn {
  font-size:15px;
  height:28px;
  padding:0;
  line-height:24px;
  color:white;
  border-radius:0px;
  margin-top:40px;
  background:none;
  width:90px;
  border-bottom:1px solid white;
  outline:none;
}

.doc-btn:active{
  font-size:15px;
  height:28px;
  padding:0;
  line-height:24px;
  color:antiquewhite;
  border-radius:0px;
  margin-top:40px;
  background:none;
  width:90px;
  border-bottom:1px solid antiquewhite;
  outline:none;
}

.doc-btn::after{
  border: none;
}