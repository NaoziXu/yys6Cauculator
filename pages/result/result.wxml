<!--result.wxml-->
<view class="container">
  <image class="bg-image" src="../../images/bg-red-light.jpg" mode="widthFix"></image>
  <view class="top">剩余所需材料</view>
  <view class="center">
    <view class="row">
      <text class="row-left">3星20级</text>
      <text class="row-right">{{shikigami_remain.s3_lv20}}</text>
    </view>
    <view class="row">
      <text class="row-left">4星25级</text>
      <text class="row-right">{{shikigami_remain.s4_lv25}}</text>
    </view>
    <view class="row">
      <text class="row-left">5星30级</text>
      <text class="row-right">{{shikigami_remain.s5_lv30}}</text>
    </view>
    <view class="row">
      <text class="row-left">金币</text>
      <text class="row-right">{{money_remain}}</text>
    </view>
  </view>
  <view class="bottom">
    <view class="row">
      <!--<text class="row-left">完成进度</text>-->
      <progress percent="{{progress_percent}}" stroke-width="12" show-info activeColor="#FFC125"/>
    </view>
  </view>
</view>